{
  "name": "camunda-playground",
  "version": "0.0.6",
  "description": "Run your diagrams on Camunda and get to know tools in the stack",
  "author": {
    "name": "Nico Rehwaldt",
    "url": "https://github.com/nikku"
  },
  "bin": {
    "camunda-playground": "./bin/camunda-playground"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nikku/camunda-playground.git",
    "directory": "packages/app"
  },
  "keywords": [
    "BPM",
    "BPMN",
    "Camunda",
    "Engine"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "node ./bin/camunda-playground",
    "test": "mocha test --exit",
    "lint": "eslint .",
    "auto-test": "npm test -- --watch"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "form-data": "^2.5.0",
    "get-port": "^5.0.0",
    "min-dash": "^3.4.0",
    "mri": "^1.1.4",
    "node-fetch": "^2.6.0",
    "open": "^6.4.0",
    "polka": "^0.5.2",
    "run-camunda": "^2.3.0",
    "sirv": "^0.4.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.0.1",
    "eslint-plugin-bpmn-io": "^0.8.2",
    "mkdirp": "^0.5.1",
    "mocha": "^6.1.4",
    "nodemon": "^1.18.11",
    "npm-run-all": "^4.1.5"
  },
  "nodemonConfig": {
    "exec": "npm start -- --no-open diagram.bpmn ",
    "watch": [
      ".env",
      "."
    ],
    "ignore": [
      ".run-camunda/*",
      "static/*",
      "tmp/*",
      "test/*"
    ]
  }
}
